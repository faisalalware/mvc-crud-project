@model List<mvc_crud_project.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Category List</h3>

<hr />

<a href="@Url.Action("Create")" class="btn btn-primary">Add New</a>

<hr />

<table class="table table-bordered table-hover table-responsive text-center">
    <thead>
        <tr>
            <th class="text-center">Category Id</th>
            <th class="text-center">Category Name</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a href="@Url.Action("Edit", new { item.Id})" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", new { item.Id})" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        </tbody>
    }
</table>

